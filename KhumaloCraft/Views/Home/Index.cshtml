@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-center align-items-center flex-column">
            <!-- Text content -->
            <div class="text-center mb-5">
                <h1 class="display-4">Welcome to KhumaloCraft Emporium</h1>
                <p class="lead">Your one-stop destination for premium handmade crafts.</p>
                <a asp-controller="Home" asp-action="Work" class="btn btn-custom btn-lg">Explore Now</a>
            </div>

            <!-- Background image (centered) -->
            <img src="~/images/back.png" alt="KhumaloCraft Emporium Background" class="img-fluid" style="max-width: 60%; height: auto;">
        </div>
    </div>
</div>
